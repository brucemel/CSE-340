<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin && locals.accountData) { %>
      <span class="welcome-user">Welcome <%= accountData.account_firstname %></span>
      <a class="logoutinv" title="Click to logout" href="/account/logout">Logout</a>
