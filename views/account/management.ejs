<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.locals.title = "Account Management"
} %>

<%- messages() %>

<div class="account-management">
  <% if (locals.loggedin && locals.accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    
    <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>
    
    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
  <% } else { %>
    <h2>Welcome</h2>
    <p>Please log in to access your account.</p>
  <% } %>
</div>