<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.locals.title = "Add New Classification"
} %>

<% if (typeof errors !== 'undefined' && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%- messages() %>

<div id="divclassification">
  <p class="field-instruction">FIELD IS REQUIRED.</p>
  
  <form id="addClassificationForm" action="/inv/add-classification" method="post">
      
      <label for="classification_name">Classification Name</label>
      <p class="requirement">Name must be alphabetic characters only.</p>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        required
        pattern="^[a-zA-Z]+$"
        title="Only alphabetic characters (no spaces or special characters)"
        placeholder="Enter classification name"
        value="<%= locals.classification_name %>">
      
      <button type="submit">Add Classification</button>
  </form>
</div>